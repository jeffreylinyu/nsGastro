{
    "compilerOptions": {
        "module": "ES2020",
        "outDir": "./Public/js",
        "target": "ES6",
        "moduleResolution": "node",
        "skipLibCheck": true,
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "noImplicitAny": false,
        "sourceMap": true,
        "lib": [
            "es2019",
            "DOM"
        ],
        "rootDir": "./",
        "baseUrl": "./",
        "paths": {
            "@/*": [
                "Resources/ts/*"
            ]
        },
    },
    "include": [
        "Resources/ts/**/*.ts",
        "Resources/ts/**/*.js",
        "Resources/ts/**/*.vue",
    ],
    "exclude": [
        "node_modules"
    ]
}